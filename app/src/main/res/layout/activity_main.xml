<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtSeleccionados"
        android:layout_width="75dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:text="Categoria"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/ch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="56dp"
        android:text="Restaurante"
        app:layout_constraintStart_toStartOf="@+id/txtSeleccionados"
        app:layout_constraintTop_toBottomOf="@+id/txtSeleccionados" />

    <CheckBox
        android:id="@+id/ch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Bares"
        app:layout_constraintStart_toStartOf="@+id/ch2"
        app:layout_constraintTop_toBottomOf="@+id/ch2" />

    <CheckBox
        android:id="@+id/ch5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Compras"
        app:layout_constraintStart_toStartOf="@+id/ch4"
        app:layout_constraintTop_toBottomOf="@+id/ch4" />

    <CheckBox
        android:id="@+id/ch4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="VidaNocturna"
        app:layout_constraintStart_toStartOf="@+id/ch3"
        app:layout_constraintTop_toBottomOf="@+id/ch3" />

</androidx.constraintlayout.widget.ConstraintLayout>